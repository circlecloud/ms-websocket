{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "incremental": true,
        "target": "es5",
        "module": "ES2015",
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": false,
        "importHelpers": true,
        // "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "allowUnreachableCode": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": []
    },
    "exclude": [
        "dist",
        "node_modules"
    ]
}